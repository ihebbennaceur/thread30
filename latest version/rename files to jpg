#!/bin/bash

# Base directory
BASE_DIR="/IMG"

# Find all image files that are NOT gif, jpg, png, jpeg
find "$BASE_DIR" -type f ! -name "*.jpg" ! -name "*.jpeg" ! -name "*.png" ! -name "*.gif" | while read file; do
    # Get the directory and filename without extension
    dir=$(dirname "$file")
    base=$(basename "$file")
    
    # Rename the file with a .jpg extension
    mv "$file" "$dir/${base%.*}.jpg"
    echo "Renamed: $file -> $dir/${base%.*}.jpg"
done
